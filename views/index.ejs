<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Make A Meals</title>
  </head>
  <body>
    <h1>Make A Meal</h1>
    <h3>New Ingredients:</h3>
    <form action="/ingredients/new" method="POST">
      <br>Ingredients <input type="text" placeholder="Enter New Ingredients" name="name"></br>
      <br>Quantity <input type="number" placeholder="Enter Quantity" name="quantity"></br>
      <br><button type="submit">Submit</button></br>
    </form>
    <br>Current ingredients:</br>
    <ul class="ingredients">
      <% for(var i=0; i<ingredients.length; i++) {%>
        <li class="ingredients">
          <span><%= ingredients[i].quantity %></span>
          <span><%= ingredients[i].name %></span>
        </li>
      <% } %>
    </ul>
    <script src="main.js"></script>
  </body>
</html>
